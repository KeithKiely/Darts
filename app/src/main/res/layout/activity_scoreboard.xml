<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xdog.dartsscore.Scoreboard">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/drawable_border"
            android:text="@string/information"
            android:id="@+id/calcButton"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:onClick="openInfo"
            android:textColor="#308070" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player_name"
                    android:id="@+id/nameTV"
                    android:layout_weight="0.5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/p2NameTV"
                    android:layout_weight="0.5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:baselineAligned="false"
                android:id="@+id/listContainer">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView1"
                    android:layout_weight="0.5" />

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView2"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_score"
                android:id="@+id/currentScoreTV"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#308070"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/currentScoreP1"
                    android:textSize="24sp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/currentScoreP2"
                    android:textSize="24sp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:gravity="right" />
            </LinearLayout>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/player1ScoreET"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center"
                android:hint="@string/input" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculate"
                android:id="@+id/calc_button"
                android:onClick="openCalc"
                android:layout_gravity="center"
                android:textColor="#308070"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
