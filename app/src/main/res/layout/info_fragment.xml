<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.xdog.dartsscore.InfoFragment"
    android:padding="8dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/tableHeadingsRow"
            android:background="#dad3d3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/players"
                android:id="@+id/playersTV"
                android:textSize="18sp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#308070"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/rounds"
                android:id="@+id/roundsTV"
                android:textSize="18sp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#308070"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/round_wins"
                android:id="@+id/roundsWonTV"
                android:textSize="18sp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#308070"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/rounds_lost"
                android:id="@+id/roundsLostTV"
                android:textSize="18sp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#308070"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/playerOneRow"
            android:background="#e9e3e3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player1NameTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player1RoundsTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/playerWinsTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player1LostTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/player2Row"
            android:background="#e9e3e3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player2NameTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player2RoundsTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player2WinsTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/player2LostTV"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.25"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
