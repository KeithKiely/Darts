<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xdog.dartsscore.PracticeSession">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/my_toolbar"
        android:gravity="center"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_goal"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:textStyle="bold|italic"
            android:textColor="#308070" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:background="@color/common_signin_btn_light_text_disabled"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/triple"
                android:id="@+id/numberTypeTV"
                android:textSize="40sp"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.5"
                android:textColor="#308070" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_10"
                android:id="@+id/currentGoalTV"
                android:layout_gravity="right"
                android:textSize="40sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="#308070"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shots_taken"
                android:id="@+id/throwsTakenTV"
                android:textSize="40sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dartsThrownET"
                android:textSize="26sp"
                android:hint="@string/press_here"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/nextButton"
            android:textColor="#308070"
            android:textSize="20sp"
            android:onClick="generateNewGoal" />

    </LinearLayout>

</RelativeLayout>
