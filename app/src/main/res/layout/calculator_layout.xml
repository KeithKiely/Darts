<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Calculator2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/darts"
        android:id="@+id/dartsHeadingTV"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textColor="#308070" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/dartsHeadingTV"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dart_one"
                android:id="@+id/dart1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight=".3"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/dart1ET"
                android:layout_weight="0.6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dart_two"
                android:id="@+id/dart2"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="18sp"
                android:layout_weight=".3"
                android:layout_marginTop="4dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/dart2ET"
                android:layout_weight="0.6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dart_three"
                android:id="@+id/dart3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.23"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/dart3ET"
                android:layout_weight="0.6" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearRow2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearRow1"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:id="@+id/bOne"
            android:layout_weight="0.25"
            android:onClick="bOne"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:id="@+id/bTwo"
            android:layout_weight="0.25"
            android:onClick="bTwo"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:id="@+id/bThree"
            android:layout_weight="0.25"
            android:onClick="bThree"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mult_1"
            android:id="@+id/by1"
            android:layout_weight="0.25"
            android:onClick="mult1"
            android:textSize="18sp"
            android:textColor="#308070" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearRow3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearRow2"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_4"
            android:id="@+id/bFour"
            android:layout_weight="0.25"
            android:onClick="bFour"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_5"
            android:id="@+id/bFive"
            android:layout_weight="0.25"
            android:onClick="bFive"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_6"
            android:id="@+id/bSix"
            android:layout_weight="0.25"
            android:onClick="bSix"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mult_2"
            android:id="@+id/mult_2"
            android:layout_weight="0.25"
            android:onClick="mult2"
            android:textSize="18sp"
            android:textColor="#308070" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearRow0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearRow3">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_7"
            android:id="@+id/bSeven"
            android:layout_weight="0.25"
            android:onClick="bSeven"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_8"
            android:id="@+id/bEight"
            android:layout_weight="0.25"
            android:onClick="bEight"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_9"
            android:id="@+id/bNine"
            android:layout_weight="0.25"
            android:onClick="bNine"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mult_3"
            android:id="@+id/mult_3"
            android:layout_weight="0.25"
            android:onClick="mult3"
            android:textSize="18sp"
            android:textColor="#308070" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearRow0">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:id="@+id/clearButton"
            android:layout_weight="0.33"
            android:onClick="clear"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:id="@+id/bZero"
            android:layout_weight="0.33"
            android:onClick="bZero"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:id="@+id/doneButton"
            android:layout_weight="0.33"
            android:onClick="done"
            android:textSize="18sp"
            android:textColor="#308070" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearRow1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous"
            android:id="@+id/previousET"
            android:layout_weight="0.5"
            android:onClick="previousET"
            android:textSize="18sp"
            android:textColor="#308070" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/nextET"
            android:layout_weight="0.5"
            android:onClick="nextET"
            android:textSize="18sp"
            android:textColor="#308070" />
    </LinearLayout>

</RelativeLayout>